<%= button_to 'favourite', animal_favourites_path(@animal), method: :post, :class => "buttonTo"%>

<% if @current_user.present?  %>
<% pre_favourite = @animal.favourites.find {|favourite| favourite.user_id  == @current_user.id} %>
<% if pre_favourite  %>
<%= button_to 'unfavourite', animal_favourite_path(@animal, pre_favourite), method: :delete%>


<% end  %>

<% end %>

<div class="controls">
<%= link_to "Edit animals", edit_animal_path(@animal)  %>
  <%= link_to "Delete animal", @animal, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>



</div>

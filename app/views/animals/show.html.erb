
<div class="container">
<h1 class="anima_text"> Meet your future pet: </h1>
<div class="row">
    <div class="col-md-8 offset-md-2">
<h1 class="anim_names"> <%= @animal.name %></h1>

<div class="imageborder">
<%= cl_image_tag @animal.image, :alt => @animal.name, :class => 'feature_animal'  %>
</div>
<ul>




   <li class="anim_stories">Age: <%= @animal.age  %> </li>
   <li class="anim_stories"> <%= @animal.story  %></li>
   <% if @animal.category.present? %>
   </br>

   <li class="anim_stories">Interested in adopting <%= @animal.name %> ? </li>
     <li class="anim_stories"> Fill the form below and we will be in touch:</li>
   <form method="POST" class="message_form" action="https://formspree.io/p.kijowska@gmail.com">
   <input type="email" name="email" placeholder="Your email">
   <textarea name="message" placeholder="Test Message"></textarea>
   <button type="submit">Send</button>
 </form>
 <% end %>


 <li class="anim_stories" class="move_category">Or click to see other <%= link_to @animal.category.name, @animal.category%> </li>
</ul>

<!-- <img src="/assets/icons8.png" alt="heart"> -->
<!-- <input type="image" src="/assets/icons8-blue.png" name="heart" class="btTxtfav" id="favForm"/>
<p id="fav"></p> -->


<div class="button1">
<%= button_to 'favourite', animal_favourites_path(@animal), method: :post, :class => "button animated pulse infinite"%>
</div>
<% if @current_user.present?  %>
<% pre_favourite = @animal.favourites.find {|favourite| favourite.user_id  == @current_user.id} %>
<% if pre_favourite  %>
<div class="button1">
<%= button_to 'unfavourite', animal_favourite_path(@animal, pre_favourite), method: :delete, :class => "buttonUnfav"%>
</div>
</div>
</div>
<% end  %>

<% end %>

<div class="controls">
  <% if @current_user.admin?   %>
<%= link_to "Edit animals", edit_animal_path(@animal)  %>

  <%= link_to "Delete animal", @animal, :method => 'delete', :data => {:confirm => 'Are you sure?'} %>
<% end %>


</div>
</div>
</div>
</div>
</div>




